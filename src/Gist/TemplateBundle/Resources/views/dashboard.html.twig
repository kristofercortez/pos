{% macro statbox(desc, data, report_path, uom, link_name, color, icon1, icon2) %}
<a href="{{ path(report_path) }}">
<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
	<div class="dashboard-stat {{ color | default('blue-hoki') }}">
		<div class="visual">
			<i class="fa {{ icon1 | default('fa-truck') }}"></i>
		</div>
		<div class="visual">
			<i class="fa {{ icon2 | default('fa-angle-down') }}"></i>
		</div>
		<div class="details">
			<div class="number">
				{{ data }}{{ ' ' ~ uom }}
			</div>
			<div class="desc">
				{{ desc }}
			</div>
		</div>
		<a class="more">
		{{ link_name | default('View more') }} <i class="m-icon-swapright m-icon-white"></i>
                </a>
	</div>
</div>
</a>

{% endmacro %}