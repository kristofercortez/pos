    {
        var bulk_adj_opt = $('#cform-bulk_adj').val();
        $('.indiv_adj').each(function() {
            $(this).hide();
        });

        if (bulk_adj_opt == 'bgift') {

        } else if (bulk_adj_opt == 'bamt') {
