        if ($('#cart_table tr').length > 1) {
            $('#transaction_type_modal').modal('show');
        } else {
            toastr['warning']('Add products to cart before proceeding to next step.', 'Warning');
        }
        
    });

    //Proceed
    $(document).on("click",".proceed_btn", function(e){
