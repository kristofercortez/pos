            if (new_cart_total >= 0) {
                $('#cart_price').text(addCommas(new_cart_total));
                $('#cart_int_price').val(new_cart_total);
                $('#applied_bulk_discount').text('Less Php '+$('#cform-discount_amount').val()+'');
