{% extends "GistTemplateBundle::base.html.twig" %}
{% import "GistTemplateBundle::form.html.twig" as form %}

{% block content %}
    <div class="page-content">
        <form method="post" class="form-horizontal" id="transfer_form">
            <div class="row" style="width: 100%;">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <h2 class="form-section">Stock Transfer Form ID: {{object.id|default('Add New')}}</h2>
                    <br>
                    <div class="portlet-body form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" id="status" name="status" value="{{ object.status|default('none') }}">
                                    <input type="hidden" name="id" value="{{ object.id|default('none') }}">
                                    <h4 class="form-section">Information</h4>
                                    {% if object.id|default('') == '' %}
                                        {{ form.group_select_legacy2("Destination", "destination", wh_opts, object.destination|default(-1), 3, 5, readonly) }}
                                        {{ form.group_textarea('Description', 'description',object.description|default(''),3,3,5)}}
                                    {% else %}
                                        {{ form.group_text('Destination', 'destination', object.destination, 3, 4, true) }}
                                        {{ form.group_textarea('Description', 'description',object.description|default(''),3,3,5, true)}}
                                        {% if object.status|default('') == 'requested' %}
                                            {{ form.group_select("Processing User", "selected_user", user_opts, 0, 3, 5, false) }}
                                        {% elseif object.status|default('') == 'processed' %}
                                            {{ form.group_select("Delivery Personnel", "selected_user", user_opts, 0, 3, 5, false) }}
                                        {% endif %}
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <h4 class="form-section">Status</h4>
                                    <div class="wrapper">
                                        <ol class="ProgressBar">
                                            <li class="ProgressBar-step is-current">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">
                                                    Pending
                                                    <br>
                                                    <span id="step1-stamp" style="font-size: 14px; color: black;">
                                                        {{ object.date_create|default('') }}
                                                        <br>
                                                        {{ object.user_create|default('') }}
                                                    </span>
                                                </span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">
                                                    Processed
                                                    <br>
                                                    <span id="step2-stamp" style="font-size: 14px; color: black;">
                                                        {{ object.date_processed|default('') }}
                                                        <br>
                                                        {{ object.user_processed|default('') }}
                                                    </span>
                                                </span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">
                                                    Delivered
                                                    <br>
                                                    <span id="step3-stamp" style="font-size: 14px; color: black;">
                                                        {{ object.date_delivered|default('') }}
                                                        <br>
                                                        {{ object.user_delivered|default('') }}
                                                    </span>
                                                </span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">
                                                    Arrived
                                                    <br>
                                                    <span id="step4-stamp" style="font-size: 14px; color: black;">
                                                        {{ object.date_received|default('') }}
                                                        <br>
                                                        {{ object.user_received|default('') }}
                                                    </span>
                                                </span>
                                            </li>
                                        </ol>
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="hidden">
                                        <symbol id="checkmark-bold" viewBox="0 0 24 24">
                                            <path d="M20.285 2l-11.285 11.567-5.286-5.011-3.714 3.716 9 8.728 15-15.285z"/>
                                        </symbol>
                                    </svg>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="form-section">Items to transfer</h4>
                                    {% if (object.id|default('') == '') or object.status|default('') != 'arrived' %}
                                        <a href="#add_entry_modal" class="btn green" data-toggle="modal" style="margin-bottom: 15px;">
                                            Search Product
                                        </a>
                                    {% endif %}
                                    <table class="table table-striped table-bordered table-hover" id="list_table">
                                        <thead>
                                        <tr>
                                            <td width="20%">Item Code</td>
                                            <td width="50%">Item Name</td>
                                            <td width="20%">Quantity</td>
                                            <td width="10%">{% if object.status|default('') == 'arrived' or object.status|default('') == 'delivered' %}Received Quantity{% endif %}</td>
                                        </tr>
                                        </thead>
                                        <tbody id="transfer_table_body">
                                        {% for e in entries|default('') %}
                                            {% if object.status|default('') == 'arrived' or object.status|default('') == 'delivered' %}
                                                <tr>
                                                    <input type="hidden" class="product_item_code" name="product_item_code[]" value="{{ e.item_code }}">
                                                    <input type="hidden" class="st_entry" name="st_entry[]" value="{{ e.id }}">
                                                    <td><input type="text"  class='form-control' value="{{ e.item_code|default('N/A') }}" readonly></td>
                                                    <td><input type="text"  class='form-control' value="{{ e.product_name|default('N/A') }}" readonly></td>
                                                    <td><input type="text"  class='form-control quantity_row' name="quantity[]" value="{{ e.quantity|default(0) }}" readonly></td>
                                                    {% if object.status|default('') == 'delivered' %}
                                                        <td><input type="text"  class='form-control' name="received_quantity[]" value="{{ e.received_quantity|default(e.quantity) }}"></td>
                                                    {% else %}
                                                        <td><input type="text"  class='form-control' name="received_quantity[]" value="{{ e.received_quantity|default(0) }}" readonly></td>
                                                    {% endif %}
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <input type="hidden" class="product_item_code" name="product_item_code[]" value="{{ e.item_code }}">
                                                    <input type="hidden" class="st_entry" name="st_entry[]" value="{{ e.id }}">
                                                    <input type="hidden" class="received_quantity" name="received_quantity[]" value="0">
                                                    <td><input type="text"  class='form-control' value="{{ e.item_code|default('N/A') }}" readonly></td>
                                                    <td><input type="text"  class='form-control' value="{{ e.product_name|default('N/A') }}" readonly></td>
                                                    <td><input type="text"  class='form-control quantity_row' name="quantity[]" value="{{ e.quantity|default(0) }}"></td>
                                                    <td><a href='javascript:void(0)' class='btn btn-xs red remove_row'>Remove</a></td></tr>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions fluid">
                            <div class="col-md-9">
                                {% if object.id|default('') == '' %}
                                    <a href="javascript:void(0)" id="transfer_form_btn" class="btn blue">Submit</a>
                                    <a href="{{ path(route_list) }}" class="btn default">Cancel</a>
                                {% else %}
                                    {% if object.status|default('') == 'requested' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                        <a href="javascript:void(0)" id="update_form_btn" class="btn blue"><i class="fa fa-save"></i> Update</a>
                                        <button name="status" type="submit" value="processed" class="btn blue"><i class="fa fa-pencil"></i> Process</button>
                                    {% elseif object.status|default('') == 'processed' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                        <a href="javascript:void(0)" id="update_form_btn" class="btn blue"><i class="fa fa-save"></i> Update</a>
                                        <button name="status" type="submit" value="delivered" class="btn blue"><i class="fa fa-truck"></i> Deliver</button>
                                    {% elseif object.status|default('') == 'delivered' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                        <button name="status" type="submit" value="arrived" class="btn blue"><i class="fa fa-check"></i> Arrived</button>
                                    {% elseif object.status|default('') == 'arrived' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                    {% endif %}
                                    <a href="{{ path(route_list) }}" class="btn default">Stock Transfers</a>
                                {% endif %}

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        </form>
    </div>
    <div id="add_entry_modal" class="modal fade" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Search Product</h4>
                </div>
                <div class="modal-body" style="">
                    <form id="entry-form">
                        <div class="row form-horizontal form">
                            <div class="form-body">
                                {{ form.group_select_legacy("Product Category", "product_category", cat_opts, 0, 3, 5, readonly) }}
                                <hr>
                                <table class="table table-striped table-bordered table-hover" id="search_table">
                                    <thead>
                                    <tr>
                                        <th style="width: 140px">Item Code</th>
                                        <th style="width: 140px">Barcode</th>
                                        <th style="width: 180px">Name</th>
                                        <th style="width: 80px"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                    <button id="add_entry_submit" type="button" class="btn green">Add Entry</button>
                    <button type="button" data-dismiss="modal" class="btn default">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}

    <script>

        function generatePath() {

            var product_category = $('#cform-product_category').val();
            var path = "{{ path('gist_inv_damaged_items_search_ajax_grid', {
                'category' : 'CATEGORY'}
            ) }}";


            if (product_category == null || product_category == '') {
                path = path.replace('CATEGORY', null);
            } else {
                path = path.replace('CATEGORY', product_category);
            }
            console.log(path);
            return path;
        }

        $(document).ready(function() {

            // SEARCH MODAL TABLE
            path = "{{ path('gist_inv_damaged_items_ajax_grid') }}";
            // path = path.replace('CATEGORY', '');

            $("#cform-selected_user").val($("#cform-selected_user option:first").val());

            var statusCount = 0;
            var currentStatus = "{{ object.status|default('new') }}";

            if (currentStatus == 'new') {
                statusCount = 0;
            } else if (currentStatus == 'requested') {
                statusCount = 1;
            } else if (currentStatus == 'processed') {
                statusCount = 2;
            } else if (currentStatus == 'delivered') {
                statusCount = 3;
            } else if (currentStatus == 'arrived') {
                statusCount = 4;
            }

            $('#step1-stamp').hide();
            $('#step2-stamp').hide();
            $('#step3-stamp').hide();
            $('#step4-stamp').hide();

            for (var i = 0; i < statusCount; i++) {
                var $bar = $(".ProgressBar");
                if ($bar.children(".is-current").length > 0) {
                    $bar.children(".is-current").removeClass("is-current").addClass("is-complete").next().addClass("is-current");
                } else {
                    $bar.children().first().addClass("is-current");
                }
                var ident = i+1;
                $('#step'+ident+'-stamp').show();
            }

            dTable = $('#search_table').dataTable({
                "bProcessing": true,
                "bServerSide": false,
                "sAjaxSource": path,
                "iDisplayLength": 5,
                "bLengthChange": false,
                "sPaginationType": "bootstrap",
                "oLanguage": {
                    "sLengthMenu": "_MENU_ records",
                    "oPaginate": {
                        "sPrevious": "Prev",
                        "sNext": "Next"
                    }
                },
                "aoColumnDefs": [
                    { "bSortable": false, "aTargets": [3] },
                ]
            });

            var restrict = "{{object.invalid|default('false')}}";
            if (restrict == 'true') {
                swal({
                        title: "Cannot load form data!",
                        text: "The stock transfer you are trying to access is not valid for this POS",
                        type: "error",
                        confirmButtonColor: "green",
                        confirmButtonText: "Okay",
                    },
                    function(){
                        location.replace('/inventory/stock_transfer/list');
                    });
            }

            $('#transfer_form_btn').on('click', function(e){
                e.preventDefault();
                e.stopImmediatePropagation();
                //$('#status').val('to_update');
                var rowCount = $('#list_table tr').length;
                var destination = $('#cform-destination').val();

                if ($('#cform-description').val() == '') {
                    toastr['error']('Description is required', 'Form validation');
                    return false;
                }

                if (rowCount > 1 && destination != '-1') {
                    var qty_passed = true;
                    $('.quantity_row').each(function() {
                        if ($(this).val() == '' || $(this).val() < 1) {
                            qty_passed = false;
                        }
                    });

                    if (qty_passed) {
                        $('#transfer_form').submit();
                    } else {
                        toastr['error']('Please check quantities.', 'Form validation');
                    }
                } else {
                    if (destination == '-1') {
                        toastr['error']('Please select destination!', 'Form validation');
                    }

                    if (rowCount < 2) {
                        toastr['error']('No item/s to transfer!', 'Form validation');
                    }
                }
            });

            $('#update_form_btn').on('click', function(e){
                e.preventDefault();
                e.stopImmediatePropagation();
                $('#status').val('to_update');
                var rowCount = $('#list_table tr').length;
                var destination = $('#cform-destination').val();

                if ($('#cform-description').val() == '') {
                    toastr['error']('Description is required', 'Form validation');
                    return false;
                }

                if ($('#cform-selected_user').val() == '') {
                    toastr['error']('Please select a user!', 'Form validation');
                    return false;
                }

                if (rowCount > 1 && destination != '-1') {
                    var qty_passed = true;
                    $('.quantity_row').each(function() {
                        if ($(this).val() == '' || $(this).val() < 1) {
                            qty_passed = false;
                        }
                    });

                    if (qty_passed) {
                        $('#transfer_form').submit();
                    } else {
                        toastr['error']('Please check quantities.', 'Form validation');
                    }
                } else {
                    if (destination == '-1') {
                        toastr['error']('Please select destination!', 'Form validation');
                    }

                    if (rowCount < 2) {
                        toastr['error']('No item/s to transfer!', 'Form validation');
                    }
                }
            });

            $(document).on("click",".remove_row", function(e){
                e.preventDefault();
                var tr = $(this).closest('tr');
                tr.remove();
                return false;
            });

            $('.add_transfer_item').on('click', function () {

                var selected_item = $('#cform-item').val();
                var selected_item_name = $('#select2-cform-item-container').prop('title');


                var duplicates = false;
                $(".product_item_code").each(function() {
                    if (selected_item == $(this).val()) {
                        duplicates = true;
                    }
                });

                if (duplicates) {
                    toastr['error']('Selected item already added!', 'Error');
                    return false;
                }

                if (selected_item == '000') {
                    toastr['error']('Invalid selection!', 'Error');
                } else {
                    var tr = "<tr><input type='hidden' name='product_item_code[]' class='product_item_code' value='"+selected_item+"'>" +
                        "<td><input type='text'  class='form-control' value='"+selected_item+"' readonly></td>" +
                        "<td><input type='text'  class='form-control' value='"+selected_item_name+"' readonly></td>" +
                        "<td><input type='number' min='1' step='1' name='quantity[]' class='form-control quantity_row'></td>" +
                        "<td><a href='javascript:void(0)' class='btn btn-xs red remove_row'>Remove</a></td></tr>";

                    $('#transfer_table_body').append(tr);
                }
            });

            //    ADD SELECTED ITEM TO TABLE
            $(document).on("click",".add_to_table", function(e){
                var row = $(this).closest('tr');
                var item_code = row.find('.itemCode').val();
                var item_name = row.find('.itemName').val();

                var selected_item = item_code;
                var selected_item_name = item_name;
                var duplicates = false;
                $(".product_item_code").each(function() {
                    if (selected_item == $(this).val()) {
                        duplicates = true;
                    }
                });

                if (duplicates) {
                    // toastr['error']('Selected item already added!', 'Error');
                    // return false;
                }

                if (selected_item == '000') {
                    toastr['error']('Invalid selection!', 'Error');
                } else {
                    var tr = "<tr><input type='hidden' name='product_item_code[]' class='product_item_code' value='"+item_code+"'>" +
                        "<td><input type='text'  class='form-control' value='"+item_code+"' readonly></td>" +
                        "<td><input type='text'  class='form-control' value='"+item_name+"' readonly></td>" +
                        "<td><input type='number' min='1' step='1' name='quantity[]' class='form-control quantity_row' required></td>" +
                        "<td><a href='javascript:void(0)' class='btn btn-xs red remove_row'>Remove</a></td></tr>";

                    $('#transfer_table_body').append(tr);
                    $('#add_entry_modal').modal('hide');
                }
            });
            //    END ADD
        });
    </script>
{% endblock %}
