{% extends "GistTemplateBundle::base.html.twig" %}
{% import "GistTemplateBundle::form.html.twig" as form %}

{% block content %}
    <div class="page-content">
        <form method="post" class="form-horizontal" onsubmit="return checkForm();">
            <div class="row" style="width: 100%;">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <h2 class="form-section">Stock Transfer Form {{object.id|default('')}}</h2>
                    <br>

                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->

                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="form-section">Information</h4>
                                    {% if object.id|default('') == '' %}
                                        {{ form.group_select("Destination", "destination", wh_opts, object.destination|default(-1), 3, 5, readonly) }}
                                        {{ form.group_textarea('Description', 'description',object.description|default(''),3,3,5)}}
                                    {% else %}
                                        {{ form.group_text('Destination', 'destination', object.destination, 3, 4, true) }}
                                        {{ form.group_textarea('Description', 'description',object.description|default(''),3,3,5, true)}}
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <h4 class="form-section">Status</h4>
                                    <div class="wrapper">
                                        <ol class="ProgressBar">
                                            <li class="ProgressBar-step is-current">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">Pending<br>{#{{ object.getDateCreate|date('M d, Y h:i a')|default('') }}#}</span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">Processed<br>{#{{ object.getDateProcessed|date('M d, Y h:i a')|default('') }}#}</span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">In-transit<br>{#{{ object.getDateDelivered|date('M d, Y h:i a')|default('') }}#}</span>
                                            </li>
                                            <li class="ProgressBar-step">
                                                <svg class="ProgressBar-icon"><use xlink:href="#checkmark-bold"/></svg>
                                                <span class="ProgressBar-stepLabel">Arrived<br>{#{{ object.getDateReceived|date('M d, Y h:i a')|default('') }}#}</span>
                                            </li>
                                        </ol>
                                    </div>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="hidden">
                                        <symbol id="checkmark-bold" viewBox="0 0 24 24">
                                            <path d="M20.285 2l-11.285 11.567-5.286-5.011-3.714 3.716 9 8.728 15-15.285z"/>
                                        </symbol>
                                    </svg>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="form-section">Items to transfer</h4>
                                    {% if object.id|default('') == '' and object.invalid|default('false') == 'false' %}
                                        {{ form.group_select_transfer("Item", "item", item_opts, '000', 3, 5, readonly) }}
                                    {% endif %}
                                    <table class="table table-striped table-bordered table-hover" id="list_table">
                                        <thead>
                                        <tr>
                                            <td width="20%">Item Code</td>
                                            <td width="50%">Item Name</td>
                                            <td width="20%">Quantity</td>
                                            {% if object.id|default('') == '' %}
                                                <td width="10%"></td>
                                            {% endif %}
                                        </tr>
                                        </thead>
                                        <tbody id="transfer_table_body">
                                        {% for e in entries|default('') %}
                                            <tr>
                                                <input type="hidden" class="product_item_code" value="{{ e.item_code }}">
                                                <td><input type="text"  class='form-control' value="{{ e.item_code|default('N/A') }}" readonly></td>
                                                <td><input type="text"  class='form-control' value="{{ e.product_name|default('N/A') }}" readonly></td>
                                                <td><input type="text"  class='form-control' value="{{ e.quantity|default(0) }}" readonly></td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions fluid">
                            <div class="col-md-9">
                                {% if object.id|default('') == '' %}
                                    <a href="javascript:void(0)" id="transfer_form_btn" class="btn blue">Submit</a>
                                    <a href="{{ path(route_list) }}" class="btn default">Cancel</a>
                                {% else %}
                                    {% if object.status|default('') == 'requested' %}
                                        <button name="status" type="submit" value="processed" class="btn blue"><i class="fa fa-pencil"></i> Process</button>
                                    {% elseif object.status|default('') == 'processed' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                        <button name="status" type="submit" value="delivered" class="btn blue"><i class="fa fa-truck"></i> Deliver</button>
                                    {% elseif object.status|default('') == 'delivered' %}
                                        <a href="{{ path('gist_inv_stock_transfer_print', { 'id': object.id}) }}" id="print_btn" class="btn green"><i class="fa fa-print"></i> Print</a>
                                        <button name="status" type="submit" value="arrived" class="btn blue"><i class="fa fa-check"></i> Receive</button>
                                    {% endif %}
                                    <a href="{{ path(route_list) }}" class="btn default">Go back</a>
                                {% endif %}

                            </div>
                        </div>

                        <!-- END FORM-->
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        </form>
    </div>
{% endblock %}

{% block js %}

    <script>

        $(document).ready(function() {


            var statusCount = 0;
            var currentStatus = "{{ object.status|default('new') }}";

            if (currentStatus == 'new') {
                statusCount = 0;
            } else if (currentStatus == 'requested') {
                statusCount = 1;
            } else if (currentStatus == 'processed') {
                statusCount = 2;
            } else if (currentStatus == 'delivered') {
                statusCount = 3;
            } else if (currentStatus == 'arrived') {
                statusCount = 4;
            }

            for (var i = 0; i < statusCount; i++) {
                var $bar = $(".ProgressBar");
                if ($bar.children(".is-current").length > 0) {
                    $bar.children(".is-current").removeClass("is-current").addClass("is-complete").next().addClass("is-current");
                } else {
                    $bar.children().first().addClass("is-current");
                }
            }

            var restrict = "{{object.invalid|default('false')}}";
            if (restrict == 'true') {
                swal({
                        title: "Cannot load form data!",
                        text: "The stock transfer you are trying to access is not valid for this POS",
                        type: "error",
                        confirmButtonColor: "green",
                        confirmButtonText: "Okay",
                    },
                    function(){
                        location.replace('/inventory/stock_transfer/list');

                    });
            }


            $('#transfer_form_btn').on('click', function(e){
                e.preventDefault();
                e.stopImmediatePropagation();
                var rowCount = $('#list_table tr').length;
                var source = $('#cform-source').val();
                var destination = $('#cform-destination').val();

                if ($('#cform-description').val() == '') {
                    toastr['error']('Description is required', 'Form validation');
                    return false;
                }

                if (rowCount > 1 && source != '-1' && destination != '-1' && source != destination) {
                    $('#transfer_form').submit();
                } else {
                    if (source == destination) {
                        toastr['error']('Source and destination location should be distinct', 'Form validation');
                    } else {
                        toastr['error']('No item/s to transfer', 'Form validation');
                    }
                }
            });

            $(document).on("click",".remove_row", function(e){
                e.preventDefault();
                var tr = $(this).closest('tr');
                tr.remove();
                return false;
            });


            $('.add_transfer_item').on('click', function () {

                var selected_item = $('#cform-item').val();
                var selected_item_name = $('#select2-cform-item-container').prop('title');


                var duplicates = false;
                $(".product_item_code").each(function() {
                    if (selected_item == $(this).val()) {
                        duplicates = true;
                    }


                });

                if (duplicates) {
                    toastr['error']('Selected item already added!', 'Error');
                    return false;
                }


                if (selected_item == '000') {
                    toastr['error']('Invalid selection!', 'Error');
                } else {
                    var tr = "<tr><input type='hidden' name='product_item_code[]' class='product_item_code' value='"+selected_item+"'>" +
                        "<td><input type='text'  class='form-control' value='"+selected_item+"' readonly></td>" +
                        "<td><input type='text'  class='form-control' value='"+selected_item_name+"' readonly></td>" +
                        "<td><input type='number' min='1' step='1' name='quantity[]' class='form-control'></td>" +
                        "<td><a href='javascript:void(0)' class='btn btn-xs red remove_row'>Remove</a></td></tr>";

                    $('#transfer_table_body').append(tr);
                }
            });

        });
    </script>
{% endblock %}
