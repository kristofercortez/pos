{% extends "GistTemplateBundle::base.html.twig" %}
{% import "GistTemplateBundle::form.html.twig" as f %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption"></div>
            </div>
            <div class="portlet-body form">
                <form method="post" class="form-horizontal" onsubmit="return checkForm()">
                    <div class="form-body">
                        <h4 class="form-section">History</h4>
                        
                        <h4 class="form-section">{{ product_name }}</h4>
                        
                        <div class="row table-responsive" style="padding-top:10px">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-hover" aria-describedby="list_table_info" id="transfer_table">
                                    <thead>
                                        <tr>
                                            <th width="35%">Last Date Adjusted</th>
                                            <th width="10%">Quantity</th>
                                            <th width="35%">Remarks</th>
                                            <th width="20%">Warehouse</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for h in history %}            
                                        <tr>
                                            <td style="width:80px">{{ h.date_adjust }}</td>
                                            <td style="width:60px">{{ h.quantity }}</td>
                                            <td style="width:100px">{{ h.remarks }}</td>
                                            <td style="width:80px">{{ h.warehouse }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                     <div class="form-actions fluid">
                        <div class="col-md-9">
                            
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="hidden">
    
</div>

{% endblock %}

{% block js %}

{% endblock %}
