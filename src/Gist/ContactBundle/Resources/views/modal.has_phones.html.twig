{% import "GistTemplateBundle::form.html.twig" as f %}
<!-- add phone modal -->
<div id="add-phone-modal" class="modal fade" role="dialog">
    <form id="add-phone-form" method="post" action="{{ path('cnt_phone_ajax_add') }}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Phone</h4>
            </div>
            <div class="modal-body form-horizontal">
                <div class="form-body">
                    {{ f.group_select('Type', 'name', phone_type_opts, '', 3, 8) }}
                    {{ f.group_text('Number', 'number', '', 3, 8, false, prefix) }}
                    {# <div class="form-group">
                        <label class="col-md-3"></label>
                        <div class="col-md-5">
                            {{ f.checkbox('is_primary', 1, 'Set as Primary Number', '', '')}}
                        </div>
                    </div> #}
                </div>
            </div>
            <div class="modal-footer">
                <button id="add-phone-close" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="add-phone-submit" type="button" class="btn btn-primary">Add Phone</button>
            </div>
        </div>
    </div>
    </form>
</div>

<script id="phone-template" type="x-tmpl-mustache">
<div>
    {{ f.hidden2('phone_id[]','{{ id }}', '') }}
    {{ f.hidden2('contact_person_id[]','{{ contact_person_id }}', '') }}
    {{ f.hidden2('is_new_phone[{{ id }}]','new', '') }}
    {{ f.group_text('Type', 'p_type[{{ id }}]', '{{type}}', 3, 4, true) }}
    {{ f.group_text('Number', 'p_number[{{ id }}]', '{{number}}', 3, 4, true) }}
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-4">
            <div class="radio-list">
            {{ f.radio('is_primary','{{id}}','is primary no.?',false,'is_primary') }}
            </div>
        </div>
    </div>
    <a href='#' class="btn red delete-phone">Delete Phone</a>
    <br/>
</div>   
</script>
  
